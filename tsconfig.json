{
  "compilerOptions": {
    "lib": ["dom"],
    "outDir": "./extension/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "includes": ["src/**/*"]
}
